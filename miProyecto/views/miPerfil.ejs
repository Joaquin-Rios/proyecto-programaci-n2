<!DOCTYPE html>
<html>
    <!--HEAD-->
    <%- include('./partials/head') %>
    <body>
        <!--HEADER-->
        <%- include('./partials/headerLogeado') %>
        <main>
            <div class="uk-section uk-section-small">
                <div class="uk-container uk-container-small">
                    <section class="info-usuario uk-flex uk-flex-around uk-width-1-1">
                        <div class="uk-width-1-3 uk-flex uk-flex-center uk-flex-middle">
                            <img src="<%= user.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
                        </div>
                        <div class="uk-width-2-3 uk-flex uk-flex-column uk-flex-around">
                            <div class="uk-flex uk-flex-middle">
                                <h3 class="uk-margin-remove"><%= user.username %> </h3>
                                <a href="/users/editarPerfil" uk-icon="icon:cog; ratio: 1.2" class="uk-margin-left"></a>
                            </div>
                            <div>
                                <ul class="red-usuario uk-flex uk-flex-between uk-width-1-2">
                                    <li><%= user.publicaciones %> publicación</li>
                                    <li><%= user.seguidores %> seguidores</li>
                                    <li><%= user.seguidos %> seguidos</li>
                                </ul>
                            </div>
                        </div>

                    </section>

                    <section class="muro uk-flex uk-flex-middle uk-flex-center">
                        <div class="uk-grid uk-child-width-1-3 uk-width-1-1 uk-margin-remove" uk-grid>
                            <div class="uk-card uk-card-hover uk-card-body uk-flex uk-flex-column uk-flex-middle uk-flex-center ">
                                <a href="/posts/<%= user.post_id%>" class="link-detalle">
                                    <img src="<%= user.publicacion%>" alt="foto de perfil" class="foto-perfil">
                                    <p class="uk-text-center">Ver mi última publicación</p>
                                </a>
                            </div>                    
                        </div>
                    </section>
                </div>
            </div>
        </main>
        <!--FOOTET-->
        <%- include('./partials/footer') %>
    </body>
</html>